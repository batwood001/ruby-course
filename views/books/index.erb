<h1> Books </h1>
<ul>
<% @books.each do |x| %>
	<li><a href="/books/<%= x['id'] %>"> <%= x['name'] %> </a></li>
<% end %>
</ul>

<form method="POST" action="/books">
  <h3>Register New Book</h3>
  <label>Name:</label>
  <input type="text" name="name" />
  <label>Author:</label>
  <input type="text" name="author" />

  <button>Register</button>
</form>